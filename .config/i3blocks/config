align=center
color=#7aa2f7

[ReadWrite]
command=iostat -dyzm | grep sdb | awk '{print "R "$3" mb/s | W "$4" mb/s"}'
label=/DEV/SDB | 
interval=5
min_width=280
align=center
color=#7aa2f7

[home_usage]
command=lsblk -ao NAME,FSTYPE,FSSIZE,FSUSED,FSUSE% | grep home | awk '{print $5}'
label=HOME 
interval=5
color=#e0af68
min_width=70
align=center

[root_usage]
command=lsblk -ao NAME,FSTYPE,FSSIZE,FSUSED,FSUSE% | grep root | awk '{print $5}'
label=ROOT 
interval=5
color=#e0af68
min_width=70
align=center

[disk_temp]
command=sudo smartctl /dev/sdb -a | grep Temp | awk '{print "+"$10"Â°C"}'
label=DISK 
interval=5

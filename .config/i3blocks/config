[arch-update]
command=../../.resources/i3blocks-contrib/arch-update/arch-update
interval=3600
markup=pango
align=left
min_width=160

[bandwidth LAN]
command=../../.resources/i3blocks-contrib/bandwidth/bandwidth
interval=5
label=NETWORK 
INTERFACE=enp5s0
#INLABEL=IN 
#OUTLABEL=OUT
